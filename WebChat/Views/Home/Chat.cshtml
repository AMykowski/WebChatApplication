@model WebChat.ViewModels.ConversationViewModel

@{
    ViewBag.Title = "Chat";
}
<h2>Chat between <span id="currentUser">@Model.CurrentUser</span> and <span id="receiverUser">@Model.ReceiverUser</span></h2>
<div class="container">
    <input type="text" id="message" />
    <input type="button" id="sendmessage" value="Send" />
    <input type="hidden" id="displayname" />
    <ul id="discussion">
        @foreach (var oldMessage in Model.OldMessages)
        {
            <li>
                <strong>
                    @oldMessage.SenderUsername
                </strong>
                @oldMessage.Message
            </li>
        }
    </ul>
</div>
@section scripts {

    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>

    <script src="~/signalr/hubs"></script>
    <script src="~/CustomScripts/handler.js"></script>
}